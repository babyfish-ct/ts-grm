{
  "name": "ts-grm",
  "private": true,
  "version": "0.0.0",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "sync-versions": "node ./scripts/sync-versions.js",
    "version-update": "yarn version && yarn sync-versions",
    "build": "yarn workspaces foreach -t run build",
    "dev": "yarn workspaces foreach -p -i run dev",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "clean": "yarn workspaces foreach -A run clean",
    "test:watch": "yarn workspaces foreach -p -i run test:watch",
    "test:ui": "yarn workspaces foreach -A -p -i run test:ui",
    "test:coverage": "yarn workspaces foreach -A run test:coverage",
    "test:typecheck": "yarn workspaces foreach -A run test:typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
